                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GRC Evo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ventes", "Index", "Ventes")</li>
                    <li>@Html.ActionLink("Règlements", "Index", "Reglements")</li>
                    <li>@Html.ActionLink("Achats", "Index", "Achats")</li>
                    <li>@Html.ActionLink("Stock / Articles", "Index", "Stock")</li>
                    <li>@Html.ActionLink("Paramètres", "Index", "Setup")</li>
                    <!--<li>@Html.ActionLink("À propos de", "About", "Home")</li>-->
                    <!--<li>@Html.ActionLink("Contact", "Contact", "Home")</li> -->
                </ul>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-2">
            <nav>

                Menu
                <li>menu 1</li>
                <li>menu 2</li>
                <li>menu 3</li>
                <li>menu 4</li>
            </nav>

        </div>
        <div class="col-md-10 body-content container">
            @RenderBody()
        </div>
    </div>


    <div class="row">
        <div class="col-sm-12">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - GRC Evo</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
